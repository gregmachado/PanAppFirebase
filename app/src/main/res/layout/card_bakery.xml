<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="8dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/iv_bakery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/padaria"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_bakery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:maxLength="21"
                android:maxLines="1"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:text="@string/bakery_name"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ic_place"
                android:layout_width="14sp"
                android:layout_height="14sp"
                android:layout_below="@id/tv_bakery"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_place_black_18dp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bakery"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ic_place"
                android:layout_toRightOf="@id/ic_place"
                android:text="@string/zero"
                android:textColor="#80000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bakery"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/tv_distance"
                android:layout_toRightOf="@id/tv_distance"
                android:text="@string/km"
                android:textColor="#80000000"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/ibtn_favorite_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:src="@drawable/ic_favorite_border_black_36dp" />

            <ImageButton
                android:id="@+id/ibtn_favorite_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:src="@drawable/ic_favorite_red_500_36dp" />

            <ImageButton
                android:id="@+id/ibtn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ibtn_favorite_on"
                android:layout_toStartOf="@id/ibtn_favorite_on"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_info_outline_black_36dp" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>