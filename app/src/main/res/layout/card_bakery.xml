<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bakery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/padaria"
            tools:ignore="ContentDescription"
            android:scaleType="fitXY"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_marginTop="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ibtn_favorite"
            android:src="@drawable/ic_favorite_border_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFE4C4"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_bakery"
                android:paddingTop="4dp"
                android:maxLength="21"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="#ffffff"
                android:text="Padaria"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="telefone"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/tv_bakery"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Bairro"
                android:layout_below="@+id/tv_phone"
                android:paddingLeft="10dp"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/ic_place"
                android:src="@drawable/ic_place_white_18dp"
                android:layout_below="@id/tv_district"
                android:layout_marginLeft="10dp"
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="distÃ£ncia"
                android:layout_below="@+id/tv_district"
                android:layout_toRightOf="@id/ic_place"
                android:paddingLeft="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text=" km"
                android:layout_below="@+id/tv_district"
                android:layout_toRightOf="@id/tv_distance"
                android:paddingLeft="2dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_more"
                android:background="@android:color/transparent"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
