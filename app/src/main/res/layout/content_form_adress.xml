<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_cep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/cep"
                android:inputType="number"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_adress_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="Nome Ex.: Minha Casa"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/street"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120sp"
                android:layout_height="36sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12sp"
                android:background="@drawable/shape_linear_rectangle"
                android:orientation="horizontal">

                <com.devspark.robototextview.widget.RobotoEditText
                    android:id="@+id/input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/number"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="182sp"
                android:layout_height="36sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12sp"
                android:background="@drawable/shape_linear_rectangle"
                android:orientation="horizontal">

                <com.devspark.robototextview.widget.RobotoEditText
                    android:id="@+id/input_complement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/complement"
                    android:inputType="textCapSentences"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/district"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/city"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/state"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shape_linear_rectangle"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/input_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/reference"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_get_my_location"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/btn_radius_28dp_dark_color"
            android:elevation="4dp"
            android:textColor="@color/white"
            android:onClick="getMyLocation"
            android:text="Localize-me" />

        <Button
            android:id="@+id/btn_add_adress"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/btn_radius_28dp_primary_color"
            android:elevation="4dp"
            android:textColor="@color/white"
            android:onClick="addAdress"
            android:text="Cadastrar endereÃ§o" />
    </LinearLayout>
</ScrollView>