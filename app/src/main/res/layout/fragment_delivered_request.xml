<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#dcdbdb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ic_delivered_request"
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:src="@drawable/ic_assignment_turned_in_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/tv_no_delivered_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_delivered_requests"
            android:visibility="invisible"
            android:layout_marginTop="100dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black_50_opacity"
            android:textSize="15sp"
            app:typeface="roboto_light_italic"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_delivered_request"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>