<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llselectl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background01"
        android:measureWithLargestChild="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="222dp"
            android:layout_height="201dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.75"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/btn_login_email"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#3498db"
            android:elevation="8dp"
            android:text="Entrar com Email"
            android:drawableLeft="@drawable/ic_email"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:textColor="#ffffff"
            android:paddingLeft="10sp" />

        <Button
            android:id="@+id/btn_login_gplus"
            android:layout_width="300sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="#da4d3e"
            android:elevation="8dp"
            android:text="Entrar com google"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/ic_action_gplus"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:paddingLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_login_face"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#395694"
            android:elevation="8dp"
            android:text="Entrar com Facebook"
            android:drawableLeft="@drawable/ic_action_facebook"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_register_bakery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:elevation="8dp"
            android:layout_marginTop="10dp"
            android:text="Possui uma padaria? Cadastre aqui!"
            android:textColor="#ffffff" />

    </LinearLayout>


</RelativeLayout>
