<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:background="#22000000">

        <TextView
            android:id="@+id/tv_product_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Produto"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price_tag_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_cart"
            android:paddingTop="4dp"
            android:text="R$ "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_cart"
            android:layout_toEndOf="@+id/tv_price_tag_cart"
            android:layout_toRightOf="@+id/tv_price_tag_cart"
            android:paddingTop="4dp"
            android:text="Preço"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_sub_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_tag_cart"
            android:paddingTop="4dp"
            android:text="Subtotal "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price_tag_cart_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_tag_cart"
            android:layout_toEndOf="@+id/tv_sub_tag"
            android:layout_toRightOf="@+id/tv_sub_tag"
            android:paddingTop="4dp"
            android:text="R$ "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/tv_price_cart_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_tag_cart"
            android:layout_toEndOf="@+id/tv_price_tag_cart_2"
            android:layout_toRightOf="@+id/tv_price_tag_cart_2"
            android:paddingTop="4dp"
            android:text="Sub Preço"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_unit_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4sp"
            android:paddingRight="4sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="xx"
            android:textColor="#696969"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_unit_tag_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_unit_cart"
            android:layout_toStartOf="@id/tv_unit_cart"
            android:paddingBottom="12sp"
            android:text="Unidades: "
            android:textColor="#696969"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:src="@drawable/ic_delete_forever_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_remove_cart"
            android:layout_below="@id/tv_unit_tag_cart"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:elevation="8dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>