<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="2dp"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/iv_bakery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/ll_add_photo"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_add_a_photo_dark_48dp" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/tv_add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/add_photo"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="18sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="2dp"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cnpj"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/lbl_cnpj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cnpj"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/corporate_name"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/lbl_corporate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/corporate_name"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/input_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36sp"
                    android:layout_marginTop="12sp"
                    android:background="@drawable/shape_linear_rectangle"
                    android:orientation="horizontal">

                    <com.devspark.robototextview.widget.RobotoEditText
                        android:id="@+id/input_fantasy_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/fantasy_name"
                        android:inputType="textCapSentences"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36sp"
                    android:layout_marginTop="12sp"
                    android:background="@drawable/shape_linear_rectangle"
                    android:orientation="horizontal">

                    <com.devspark.robototextview.widget.RobotoEditText
                        android:id="@+id/input_fone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="2dp"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/adress"
                    android:textSize="15sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/street"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/input_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/street"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/input_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/district"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/input_district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/district"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/input_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/input_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="2dp"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/lbl_has_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Possui delivery?"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <Switch
                        android:id="@+id/switch_delivery"
                        android:layout_marginTop="2dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/lbl_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_time"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shape_linear_rectangle"
                        android:orientation="horizontal">

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:id="@+id/tv_start_time"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_hour"
                            android:textColor="@color/black_50_opacity"
                            android:textSize="14sp"
                            app:typeface="roboto_light_italic" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/lbl_finish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/finish_time"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black_50_opacity"
                        android:textSize="14sp"
                        app:typeface="roboto_light_italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/shape_linear_rectangle"
                        android:orientation="horizontal">

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:id="@+id/tv_finish_time"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_hour"
                            android:textColor="@color/black_50_opacity"
                            android:textSize="14sp"
                            app:typeface="roboto_light_italic" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_add_bakery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_radius_28dp_dark_color"
            android:elevation="4dp"
            android:onClick="sendEditBakery"
            android:text="@string/send"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>