<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        tools:background="#ffffff">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="120sp"
            android:layout_height="110sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16sp"
            android:layout_marginRight="16sp"
            android:src="@drawable/img_product"
            tools:ignore="ContentDescription"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_product"
            android:layout_toRightOf="@+id/iv_product"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="Produto"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_product"
            android:layout_toRightOf="@+id/iv_product"
            android:layout_below="@id/tv_product"
            android:layout_marginTop="4dp"
            android:text="Tipo"
            android:textColor="#363636"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_toEndOf="@+id/iv_product"
            android:layout_toRightOf="@+id/iv_product"
            android:layout_marginTop="4dp"
            android:text="R$ "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_toEndOf="@+id/tv_price_tag"
            android:layout_toRightOf="@+id/tv_price_tag"
            android:layout_marginTop="4dp"
            android:text="Preço"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product"
            android:layout_toLeftOf="@+id/tv_unit_tag"
            android:layout_toStartOf="@+id/tv_unit_tag"
            android:paddingTop="4dp"
            android:text="xx"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_unit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:text="un. à venda"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/btn_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_product"
            android:layout_toRightOf="@+id/iv_product"
            android:layout_below="@+id/tv_price_tag"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_unit_sale"
            android:layout_width="20sp"
            android:layout_height="25sp"
            android:layout_below="@+id/tv_price_tag"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/btn_less"
            android:layout_toEndOf="@id/btn_less"
            android:text="@string/zero_single"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_plus"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            android:layout_marginRight="6sp"
            android:layout_below="@+id/tv_price_tag"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_unit_sale"
            android:layout_toEndOf="@id/tv_unit_sale" />

        <Button
            android:id="@+id/btn_sale"
            android:layout_width="wrap_content"
            android:layout_height="36sp"
            android:background="@drawable/btn_radius_18dp_primary_color"
            android:layout_below="@id/tv_price_tag"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:text="@string/add"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_marginTop="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
